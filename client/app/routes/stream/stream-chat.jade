#chat(style="position: absolute; top: 0; bottom: 0; right: 15px; left: 0")
    textarea.form-control(type="text", placeholder="Send a message", ng-model="text", ng-keypress="sendChat($event)", style="margin-bottom: 10px; height: 50px; resize: none")
    div(style="overflow-y: auto; max-height: calc(100% - 60px); word-break: break-word")
      table.table.table-striped: tbody
        tr.message(ng-repeat="message in $storage.messages")
          td
            small {{ message.timestamp | time }}&nbsp;
            span {{ message.user }}:&nbsp;
            span(ng-bind-html="message.text | trustedHtml")
