.container
  .row: .col-xs-12.form-horizontal
    .list-group.list-group-hover
      a.list-group-item(href="", ng-repeat='user in users', ng-click="setUID(user)")
        strong {{ user.name.first }} {{ user.name.last }} -&nbsp;
        span.text-muted {{ user.facebook.id }}
        br
        span.text-muted {{ user.email }}
        //- a.trash(ng-click='delete(user)')
        //-   span.glyphicon.glyphicon-trash.pull-right
  .row: .col-xs-12.form-horizontal
    .form-group
      label.col-xs-2(for="user_id") User ID&nbsp;
      .col-xs-10
        input.form-control.col-xs-10(id="user_id" ng-model="user_id")
    .form-group
      label.col-xs-2(for="message") Message&nbsp;
      .col-xs-10
        input.form-control(id="message" ng-model="message")
    button.btn.btn-success(ng-click="sendNotif(user_id, message)") Create Notification
  br
  .row: .col-xs-12
    .list-group.list-group-hover
      a.list-group-item(ng-repeat="game in games")
        img.img-thumbnail(src="{{ game.img }}", width="100px")
        strong &nbsp;{{ game.name }}
        |&nbsp;- {{ game.info }}
  br
  h1 Test slack
  .row: .col-xs-12.form-horizontal
    .form-group
      label.col-xs-2(for="channel") Channel&nbsp;
      .col-xs-10
        input.form-control.col-xs-10(id="channel" ng-model="slack.channel")
    .form-group
      label.col-xs-2(for="message") Message&nbsp;
      .col-xs-10
        textarea.form-control(id="message" ng-model="slack.message")
    button.btn.btn-success(ng-click="sendSlack(slack.channel, slack.message)") Send Message
